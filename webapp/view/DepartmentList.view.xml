<mvc:View controllerName="Devops.EmployeeMgmtSystem.controller.DepartmentList" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
	<Page showHeader="false" enableScrolling="true">
		<content>
			<Table items="{/}" mode="SingleSelectMaster" selectionChange="onRowSelect">
				<headerToolbar>
					<OverflowToolbar>
						<content>
							<Title text="Departments" level="H2"/>
						</content>
					</OverflowToolbar>
				</headerToolbar>
				<columns>
					<Column>
						<Text text="Department Name"></Text>
					</Column>
					<Column>
						<Text text="Department Address"></Text>
					</Column>
					<Column>
						<Text text="Department Code"></Text>
					</Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<Text text="{departmentName}"></Text>
							<Text text="{departmentAddress}"></Text>
							<Text text="{departmentCode}"></Text>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>