<mvc:View controllerName="Devops.EmployeeMgmtSystem.controller.UserList" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
	<Page showHeader="false" enableScrolling="true">
		<content>
			<Table items="{/}">
				<headerToolbar>
					<OverflowToolbar>
						<content>
							<Title text="Users" level="H2"/>
						</content>
					</OverflowToolbar>
				</headerToolbar>
				<columns>
					<Column>
						<Text text="First Name"></Text>
					</Column>
					<Column>
						<Text text="Last Name"></Text>
					</Column>
					<Column>
						<Text text="Email Address"></Text>
					</Column>
					<Column>
						<Text text="Department ID"></Text>
					</Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<Text text="{firstName}"></Text>
							<Text text="{lastName}"></Text>
							<Text text="{emailId}"></Text>
							<Text text="{departmentId}"></Text>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>